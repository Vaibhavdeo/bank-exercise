<Window x:Class="bank_exercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank_exercise"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "4*" />
            <RowDefinition Height = "4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "4*" />
            <ColumnDefinition Width = "4*" />
        </Grid.ColumnDefinitions>
        <Label Content = "Select Bank Name" VerticalAlignment = "Top" Margin = "50" Width = "70" HorizontalAlignment = "Left"/>
        <ComboBox x:Name = "comboBox" Grid.Row="0" Grid.Column="0" HorizontalAlignment = "Center" 
         Margin = "50" VerticalAlignment = "Top" Width = "100">
            <ComboBoxItem Content = "Item #1" />
            <ComboBoxItem Content = "Item #2" />
            <ComboBoxItem Content = "Item #3" />
        </ComboBox>
      
       <Button x:Name = "button" Content = "Add" VerticalAlignment = "Top" Margin = "50"
         Grid.Row ="0" Grid.Column ="1" Width="50" Height="20" HorizontalAlignment = "Left"/>
       </Grid>
</Window>
